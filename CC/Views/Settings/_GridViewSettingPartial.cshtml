@{
    var grid = Html.DevExpress().GridView(settings => {
        settings.Name = "GridViewSetting";
        settings.CallbackRouteValues = new { Controller = "Settings", Action = "GridViewSettingPartial" };

        settings.SettingsEditing.AddNewRowRouteValues = new { Controller = "Settings", Action = "GridViewSettingPartialAddNew" };
        settings.SettingsEditing.UpdateRowRouteValues = new { Controller = "Settings", Action = "GridViewSettingPartialUpdate" };
        settings.SettingsEditing.DeleteRowRouteValues = new { Controller = "Settings", Action = "GridViewSettingPartialDelete" };
        settings.SettingsEditing.Mode = GridViewEditingMode.EditFormAndDisplayRow;
        settings.SettingsBehavior.ConfirmDelete = true;

        settings.CommandColumn.Visible = true;
        settings.CommandColumn.ShowNewButton = CC.Models.Classes.MySession.Current.IsUserAdmin;
        settings.CommandColumn.ShowDeleteButton = CC.Models.Classes.MySession.Current.IsUserAdmin;
        settings.CommandColumn.ShowEditButton = true;

        settings.KeyFieldName = "ID";

        settings.SettingsPager.Visible = true;
        settings.Settings.ShowGroupPanel = true;
        settings.Settings.ShowFilterRow = true;
        settings.SettingsBehavior.AllowSelectByRowClick = true;

        settings.SettingsAdaptivity.AdaptivityMode = GridViewAdaptivityMode.Off;
        settings.SettingsAdaptivity.AdaptiveColumnPosition = GridViewAdaptiveColumnPosition.Right;
        settings.SettingsAdaptivity.AdaptiveDetailColumnCount = 1;
        settings.SettingsAdaptivity.AllowOnlyOneAdaptiveDetailExpanded = false;
        settings.SettingsAdaptivity.HideDataCellsAtWindowInnerWidth = 0;

        settings.Columns.Add(c=>
        {
            c.FieldName = "Name";
            c.Caption = "Denumire";
            if (!CC.Models.Classes.MySession.Current.IsUserAdmin)
                c.ReadOnly = true;

        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "Value";
            c.Caption = "Descriere";
        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "UserId";
            c.Caption = "Utilizatori";
            c.Visible = CC.Models.Classes.MySession.Current.IsUserAdmin;
            c.EditorProperties().ComboBox(p =>
            {
                p.TextField = "UserName";
                p.ValueField = "Id";
                p.ValueType = typeof(string);
                p.DataSource = ViewBag.AspNetUsers;
            });
        });
    });
    if (ViewData["EditError"] != null){
        grid.SetEditErrorText((string)ViewData["EditError"]);
    }
}
@grid.Bind(Model).GetHtml()